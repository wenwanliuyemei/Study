<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:scaleType="centerCrop"
        android:src="@mipmap/lv_head_fixed_title" />


    <com.xm.study.lvheadfixed.widget.MyScrollView
        android:id="@+id/sv_show"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bunner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/lv_head_fixed_bunner"
                android:scaleType="centerCrop" />

            <include
                android:id="@+id/lay_buy"
                layout="@layout/layout_lv_head_fixed_buy" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/lv_head_fixed_body"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/lv_head_fixed_body"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/lv_head_fixed_body"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </com.xm.study.lvheadfixed.widget.MyScrollView>

</LinearLayout>